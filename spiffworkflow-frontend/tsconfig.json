{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "module": "commonjs",
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,

    "lib": ["dom", "dom.iterable", "es2021"],
    "target": "es2021",
    "types": ["vite/client", "node"],
    "isolatedModules": true
  },
  "include": ["src/**/*"]
}
